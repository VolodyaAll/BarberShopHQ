<h2>Записаться</h2>
<p>Здесь вы можете записаться к нам</p>

<form action="/visit" method="POST" role="form">
  <div class="form-group">
    <label>Ваше имя</label>
    <input name="client[name]" type="text" class="form-control" placeholder="Введите ваше имя" value="<%= @c.name %>">
  </div>

  <div class="form-group">
    <label>Ваш телефон</label>
    <input name="client[phone]" type="text" class="form-control" placeholder="Введите ваш телефонный номер" value="<%= @c.phone %>">
  </div>

  <div class="form-group">
    <label>Дата и время посещения</label>
    <input id="datetimepicker" name="client[datestamp]" type="text" class="form-control" placeholder="Введите дату и время вашего посещения" value="<%= @c.datestamp %>">
  </div>

  <div class="form-group">
    <label>Выберите парикмахера</label>
    <select class="form-control" name="client[barber]">
      <% @barbers.each do |barber| %>
        <option <%= @c.barber == barber.name ? 'selected' : '' %>><%= barber.name %></option>
      <% end %>
    </select>
  </div>

  <div class="form-group">
    <label>В какой цвет хотите окраситься:</label>
      <select id="color" name="client[color]">
        <option <%= @c.color == "#7bd148" ? 'selected' : '' %> value="#7bd148">Green</option>
        <option <%= @c.color == "#5484ed" ? 'selected' : '' %> value="#5484ed">Bold blue</option>
        <option <%= @c.color == "#a4bdfc" ? 'selected' : '' %> value="#a4bdfc">Blue</option>
        <option <%= @c.color == "#46d6db" ? 'selected' : '' %> value="#46d6db">Turquoise</option>
        <option <%= @c.color == "#7ae7bf" ? 'selected' : '' %> value="#7ae7bf">Light green</option>
        <option <%= @c.color == "#51b749" ? 'selected' : '' %> value="#51b749">Bold green</option>
        <option <%= @c.color == "#fbd75b" ? 'selected' : '' %> value="#fbd75b">Yellow</option>
        <option <%= @c.color == "#ffb878" ? 'selected' : '' %> value="#ffb878">Orange</option>
        <option <%= @c.color == "#ff887c" ? 'selected' : '' %> value="#ff887c">Red</option>
        <option <%= @c.color == "#dc2127" ? 'selected' : '' %> value="#dc2127">Bold red</option>
        <option <%= @c.color == "#dbadff" ? 'selected' : '' %> value="#dbadff">Purple</option>
        <option <%= @c.color == "#e1e1e1" ? 'selected' : '' %> value="#e1e1e1">Gray</option>
      </select>
  </div>

  <button type="submit" class="btn btn-primary">Записаться</button>

  

</form>

<script type="text/javascript">


  $(function(){

    $('#color').simplecolorpicker();

    $('#datetimepicker').datetimepicker();

  });

</script>

